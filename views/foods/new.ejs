<%- include('../layout/company/header') %>
  <div class="card">
    <div class="card-body">
      <div class="card-header">
        New food
      </div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
          <label>Categories</label>
          <% categories.forEach(function(category){ %>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" name="category[]" id="<%= category._id %>" value="<%= category._id %>" class="custom-control-input">
              <label for="<%= category._id %>" class="custom-control-label"><%= category.name %></label>
            </div>
          <% }) %>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input type="text" class="form-control" id="price">
          </div>
        </div>
        <div class="form-group">
          <label>Duration </label>
          <small class="form-text text-muted">Default value is 0</small>
          <div class="form-row">
            <div class="col-md-4">
              <label for="hour">Hour</label>
              <input type="text" class="form-control" id="hour">
            </div>
            <div class="col-md-4">
              <label for="minute">Minute</label>
              <input type="text" class="form-control" id="minute">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="dish-per-day">Dish per day</label>
          <input type="text" id="dish-per-day" class="form-control">
        </div>
        <button class="btn btn-primary" id="add-btn">Add</button>
      </form>
    </div>
  </div>
  <script src="/assets/js/food/new.js"></script>
<%- include('../layout/company/footer') %>