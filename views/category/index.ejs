<%- include('../layout/company/header') %>
  <div class="card">
    <div class="card-body">
      <div class="card-header d-flex flex-row justify-content-between align-items-center">
        <h2>Categories Table</h2>
        <% if(role === 'Chef Manager'){ %>
          <a href="/company/<%= company._id %>/categories/new%>" class="btn btn-primary">New Category</a>
        <% } %>
      </div>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Added by</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(function(category){ %>
            <tr>
              <td>
                <a href="/company/<%= company._id %>/categories/<%= category.id %>" class="card-link">
                  <%= category.id %>
                </a>
              </td>
              <td><%= category.name %></td>
              <td><%= category.added_by %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
<%- include('../layout/company/footer') %>