<%- include('../layout/company/header') %>
  <div class="card">
    <div class="card-body">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Tables</h2>
        <button class="btn btn-primary" data-toggle="modal" data-target="#new-table">New table</button>
        <div class="modal fade" id="new-table">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title">New Table</h3>
                <button class="close" data-dismiss="modal">
                  &times;
                </button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="form-group">
                    <label for="name">Table name</label>
                    <input type="text" class="form-control" id="name">
                    <small class="text-danger" id="invalid-name"></small>
                  </div>
                  <button class="btn btn-primary" id="submit-btn">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% tables.forEach(function(table){ %>
            <tr>
              <td>
                <a href="javascript:void(0)" class="card-link" data-toggle="modal" data-target="#<%= table._id %>"><%= table._id %></a>
                <div class="modal fade" id="<%= table._id %>">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h2 class="modal-title app-black"><%= table.name %></h2>
                        <button class="close" data-dismiss="modal">&times;</button>
                      </div>
                      <div class="modal-body">
                        <form>
                          <div class="form-group">
                            <label class="app-black" for="table-<%= table._id %>">Table name</label>
                            <input type="text" id="table-<%= table._id%>" value="<%= table.name %>" class="form-control">
                            <small class="text-danger" id="invalid-name-<%= table._id %>"></small>
                          </div>
                          <button class="btn btn-primary update" update-id="<%= table._id %>">Update</button>
                          <button class="btn btn-danger delete" delete-id="<%= table._id %>">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
              <td><%= table.name %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="/assets/js/table/index.js"></script>
<%- include('../layout/company/footer') %>